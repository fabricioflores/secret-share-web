
<%= form_for(secret, remote: true, validate: true)  do |f| %>
  <div class="form-group col-xs-12">
    <%= f.label :exposed_secret, class: "control-label" %>
    <%= f.text_field :exposed_secret, class: "form-control",
                                      autocomplete: "off",
                                      placeholder: "any secret"%>
  </div>

  <div class="form-group col-xs-6">
    <%= f.label :available, class: "control-label" %>
    <%= f.number_field :available, class: "form-control",
                                   min: 2,
                                   placeholder: "greater than 2" %>
  </div>

  <div class="form-group col-xs-6">
    <%= f.label :needed, class: "control-label" %>
    <%= f.number_field :needed, class: "form-control",
                                min: 2,
                                placeholder: "greater than 2" %>
  </div>

  <div class="form-group col-xs-12">
    <%= f.submit "Split", class: "btn btn-default" %>
  </div>
<% end %>
