<!DOCTYPE html>
<html>
  <head>
    <title>SecretShare</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="row app-container">
        <div class="col-md-2 app-content">
          <ul class="nav nav-pills nav-stacked">
            <li role="presentation" class="<%= active_class(root_path) %>">
              <%= link_to "Split", root_path %>
            </li>
            <li role="presentation" class="<%= active_class(new_merger_path) %>">
              <%= link_to "Merge", new_merger_path %>
            </li>
          </ul>
        </div>
        <div class="col-md-10">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
